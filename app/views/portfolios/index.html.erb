<h1>Portfolio Items</h1>

<!-- <a href="portfolios/new">Create new Item</a> -->

<%= link_to "Create new Item", new_portfolio_url %>

<% @portfolio_items.each do |item| %>
	<p><%= link_to item.title, portfolio_show_path(item) %></p>
	<p><%= item.subtitle %></p>
	<p><%= item.body %></p>	
	<%= image_tag item.thumb_image unless item.thumb_image.nil? %>
	<%= link_to "Edit", edit_portfolio_path(item) %>
	<!-- <a href="/portfolios/<%= item.id %>/edit">Edit iTem</a> -->
	<%= link_to 'Delete Portfolio Item', portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>